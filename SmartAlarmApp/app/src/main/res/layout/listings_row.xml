<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"

    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/ll_item"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/text_color"
                android:layout_marginStart="15dp"

                android:id="@+id/tv_description"
                android:text=""
                android:layout_marginLeft="15dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                >

                <ImageView
                    android:alpha=".9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_launcher_round"
                    android:layout_marginTop="7dp"
                    />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:text="8:21"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp" />
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginStart="5dp"
        android:text="4/22/2021"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp" />

</LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/btn_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="120dp"
                    android:layout_marginStart="120dp"
                    android:scaleX="1.7"
                    android:scaleY="1.7"
                    android:textOff="@string/text_of"
                    android:textOn="@string/text_on"
                    android:autoSizeMaxTextSize="8sp"
                    android:textSize="8sp"
                    android:autoSizePresetSizes="8sp"
                    android:autoSizeTextType="none"
                    android:autoSizeStepGranularity="8sp"



                    android:thumb="@drawable/thumb_switch"
                    card_view:showText="true" />


            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>